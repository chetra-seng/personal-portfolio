{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env.local"],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "lint": {},
    "typecheck": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "./dist/**"],
      "cache": true,
      "dependsOn": ["^build"]
    }
  }
}
